@model Project
@{
    
    var currentProject = new Project();
    var isWorkingOnProject = SessionItems.CurrentUser.IsWorkingOnProject(out currentProject);
    
}


    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-laptop modal-icon"></i>
                <h4 class="modal-title">@Model.Name</h4>
                <small class="font-bold">Please enter comment for project @Model.Name</small>
            </div>
            <div class="modal-body">
                @Html.Raw(Model.Description);
                <div class="form-group"><label>Comment</label> <input type="text" id="activityComment" placeholder="Enter your Comment" class="form-control"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnPunchOutProject">Save changes</button>
            </div>
        </div>
    </div>


<script>
    $(document).ready(function () {
        $("#btnPunchOutProject").click(function () {
            var cmm = $("#activityComment").val();
            punchOutProject(@Model.id, cmm);
        });
    });
</script>