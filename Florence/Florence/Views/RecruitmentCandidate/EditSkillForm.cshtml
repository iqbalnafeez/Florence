@model Florence.CandidateSkill

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CandidateSkill</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)


        <div class="form-group">
            @Html.LabelFor(model => model.SkillName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SkillName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SkillName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SkillLevel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SkillLevel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SkillLevel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="btnEditSkillForm" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}


<script>
    $(document).ready(function () {

        $("#btnEditSkillForm").click(function (e) {
            var obj = {
                LinkID: $("#LinkID").val(),
                SkillName: $("#SkillName").val(),
                SkillLevel: $("#SkillLevel").val()

            }
            _skillArr.push(obj);
            if (_skillArr.length == 1) {
                generateSkillGrid();
            } else {
                reloadGridData("skillGrid", _skillArr)
            }

            $("#" + _addSkill).data("kendoWindow").close();
        });

    });
</script>