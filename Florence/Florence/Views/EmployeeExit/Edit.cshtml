                @Html.ValidationMessageFor(model => model.ExitDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypeOfExit, htmlAttributes: new { @class = "control-label col-md-2" })
